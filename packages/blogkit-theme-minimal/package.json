    "autoprefixer": "^10.4.2",
    "blogkit": "workspace:^",
    "concurrently": "^8.0.0",
    "next": "^13.0.0",
    "postcss": "^8.4.7",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.0.23",
    "typescript": "^5.0.0"
